<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>To Do list</title>
  </head>
  <body>
    <h1>To-Do List</h1>
    <form method="post" action="/">


               <input type="text" name="text" placeholder="Add a todo.." />
               <button> Add a todo</button>
               </form>
               <ul>
                 {{#list}}
                 {{#yetTodo}}

                 <li>
                 {{todo}}
                <form action="/complete"  method="post">
                  <button type="submit" name="complete" value="{{todo}}">Mark Complete</button>
                  </li>
                   {{/yetTodo}}
                   {{/list}}
                  </ul>
                  <h2>Completed</h2>
                  <ul>
                    {{#list}}
                    {{^yetTodo}}
                    <li>
                      <del>{{todo}}</del>
                    </li>
                    {{/yetTodo}}
                    {{/list}}
                  </ul>
                </form>
  </body>
</html>
